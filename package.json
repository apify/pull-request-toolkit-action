{
    "name": "pull-request-toolkit-action",
    "version": "1.0.0",
    "private": true,
    "description": "The Github action helps to Apify PR be better.",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint ./src --ext .js,.jsx,.ts,.tsx ; tsc --noemit",
        "lint:fix": "./node_modules/.bin/eslint ./src --ext .js,.jsx,.ts,.tsx --fix ; tsc --noemit",
        "package": "ncc build --source-map",
        "test": "node_modules/jest/bin/jest.js",
        "all": "npm run build && npm run lint && npm run test && npm run package"
    },
    "keywords": [
        "actions",
        "apify",
        "toolkit"
    ],
    "author": "Apify team",
    "license": "Apache",
    "dependencies": {
        "@actions/core": "^1.8.2",
        "@actions/github": "^5.0.3",
        "axios": "^1.2.3"
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.2.3",
        "@types/jest": "^27.5.1",
        "@types/node": "^17.0.38",
        "@typescript-eslint/eslint-plugin": "^5.27.0",
        "@typescript-eslint/parser": "^5.27.0",
        "@vercel/ncc": "^0.34.0",
        "eslint": "^8.16.0",
        "eslint-plugin-github": "^4.3.6",
        "eslint-plugin-jest": "^26.4.6",
        "jest": "^28.1.0",
        "jest-circus": "^28.1.0",
        "js-yaml": "^4.1.0",
        "ts-jest": "^28.0.3",
        "typescript": "^4.7.2"
    }
}
