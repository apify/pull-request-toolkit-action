{
    "name": "pull-request-toolkit-action",
    "version": "1.0.0",
    "private": true,
    "description": "The Github action helps to Apify PR be better.",
    "main": "lib/main.js",
    "scripts": {
        "build": "tsc",
        "lint": "./node_modules/.bin/eslint ./src --ext .js,.jsx,.ts,.tsx ; tsc --noemit",
        "lint:fix": "./node_modules/.bin/eslint ./src --ext .js,.jsx,.ts,.tsx --fix ; tsc --noemit",
        "package": "ncc build --source-map",
        "test": "node_modules/jest/bin/jest.js",
        "all": "npm run build && npm run lint && npm run test && npm run package"
    },
    "keywords": [
        "actions",
        "apify",
        "toolkit"
    ],
    "author": "Apify team",
    "license": "Apache",
    "dependencies": {
        "@actions/core": "^1.2.6",
        "@actions/github": "^4.0.0"
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.1.0",
        "@types/jest": "^26.0.23",
        "@types/node": "^14.14.9",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "@vercel/ncc": "^0.25.1",
        "eslint": "^7.18.0",
        "eslint-plugin-github": "^4.1.1",
        "eslint-plugin-jest": "^24.1.3",
        "jest": "^26.6.3",
        "jest-circus": "^26.6.3",
        "js-yaml": "^3.14.0",
        "ts-jest": "^26.5.6",
        "typescript": "^4.1.3"
    }
}
